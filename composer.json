{
    "name": "toin0u/concise",
    "description": "Concise your urls via extern providers",
    "license": "MIT",
    "keywords": ["url", "shortener", "shorten", "api"],
    "homepage": "https://github.com/toin0u/concise",
    "authors": [
        {
            "name": "Antoine Corcy",
            "email": "contact@sbin.dk",
            "homepage": "http://sbin.dk",
            "role": "Developer"
        },
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "egeloen/http-adapter": "0.6.*@dev"
    },
    "require-dev": {
        "guzzle/guzzle": "~3.9",
        "tedivm/stash": "dev-master",
        "phpspec/phpspec": "~2.1.0",
        "henrikbjorn/phpspec-code-coverage" : "~1.0.0"
    },
    "suggest": {
        "tedivm/stash": "Used for caching URLs"
    },
    "autoload": {
        "psr-4": {
            "Concise\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
